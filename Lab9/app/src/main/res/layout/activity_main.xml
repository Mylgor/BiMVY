<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab6.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Онлайн калькулятор"
            android:id="@+id/textViewLabelAplicat"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#2ac412"
            android:textSize="30dp"
            android:layout_weight="0.01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInputField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.2"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:paddingEnd="10dp"
            android:textSize="25dp"
            android:background="#a2a2a2"
            android:gravity="bottom|right" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.8">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/btnSeven"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/btnEight"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/btnNine"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:id="@+id/btnDevision"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/btnFour"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/btnFive"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/btnSix"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:id="@+id/btnMultiplic"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/btnOne"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/btnTwo"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/btnThree"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/btnMinus"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Erase"
                    android:id="@+id/btnErase"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/btnZero"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/btnEqually"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:background="#4b4b4b" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>
